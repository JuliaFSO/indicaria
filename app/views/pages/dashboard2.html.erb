<div  class="container mt-3 d-flex flex-row justify-content-around border border-secondary">
  <div class="text-start">
    <%= image_tag  "https://res.cloudinary.com/dsjv33crm/image/upload/v1623324507/indicaria/logo_shadow_sfqgfg.png", class: 'indicaria-logo img-fluid height:100%' %>
  </div>

  <div class="mt-3 border border-secondary">
    <% if @movie_picks.present? %> 
      <div class="movie-container-up mt-4 title-container-up border border-secondary">
        <%= image_tag  "https://image.tmdb.org/t/p/w500#{@movie_picks.movie.poster_url}", class: 'movie-img-up rounded img-fluid width:100%' %>
        <p> <%= @movie_picks.movie.title %> <p/>
      <% else %>
        <h1> Você não tem nenhum filme dessa categoria em sua lista! </h1>
      <% end %>
      </div>

  </div>

  <div class="text-center">
    <h2 class="indica">para você!</h2>
  </div>
</div>

    <div class="w-100 d-flex justify-self-center">
      <h2>Você também pode selecionar o filme de acordo com o mood do dia! Veja abaixo.</h2>
    </div>
<%= render 'shared/background_button_user' %>

  <div class="w-100 text-start p-5">
    <h2>Qual seu mood do dia?</h2>
    <% @genres.each do |genre| %>
      <%= link_to genre, dashboard_path(query: genre), class: "mr-3" %>
    <% end %>
  </div>

</div>