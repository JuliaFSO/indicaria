<div class="container d-flex justify-content-center">
  <div class="justify-content-center p-5 w-75">
    <h2>Preencha seus dados principais</h2>
    <h5>Todos os campos abaixo são obrigatórios.</h5>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :name,
                    label: false,
                    placeholder: 'Nome',
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "name" } %>
        <%= f.input :email,
                    label: false,
                    placeholder: 'Email',
                    required: true,
                    input_html: { autocomplete: "email" }%>
        <%= f.input :password,
                    label: false,
                    placeholder: 'Senha',
                    required: true,
                    hint: ("#{@minimum_password_length} caracteres mínimos" if @minimum_password_length),
                    input_html: { autocomplete: "nova senha" } %>
        <%= f.input :password_confirmation,
                    label: false,
                    placeholder: 'Confirmar Senha',
                    required: true,
                    input_html: { autocomplete: "nova senha" } %>
      </div>

      <div>
        <%= f.button :submit, "CADASTRAR", class:"btn mb-2 btn-secondary btn-block" %>
      </div>
    <% end %>
  </div>
</div>