<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "https://res.cloudinary.com/dsjv33crm/image/upload/v1623348167/indicaria/logo_indicaria_branco_h5czg5.png" %>
  <% end %>

  <div class="align-self-center pt-3 w-50">
    <%= form_tag movies_path, method: :get do %>
      <div class="search-form-control form-group flex-grow-1">
        <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "Buscar filmes"
        %>
        <%= button_tag type: "submit", class: "btn btn-flat" do %>
          <i class="fas fa-search"></i>
        <% end %>
      </div>
    <% end %>
  </div>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto align-items-center">
        <li class="nav-item active align-self-center">
          <%= link_to "Dar matches", user_preferences_path, class: "navbar-link" %>
        </li>
        <li class="nav-item active align-self-center">
          <%= link_to "Indicações", dashboard_path, class: "navbar-link" %>
        </li>
        <li class="nav-item active align-self-center">
          <%= link_to "Meu perfil", profile_path, class: "navbar-link" %>
        </li>
      <li class="nav-item dropdown">
        <%= cl_image_tag current_user.avatar.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "Edite seus dados", edit_user_registration_path, class: "dropdown-item" %>
          <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
        </div>
      </li>
    </ul>
  </div>
</div>
