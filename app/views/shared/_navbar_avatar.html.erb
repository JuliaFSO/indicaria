<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to "#", class: "navbar-brand" do %>
    <%= image_tag "https://res.cloudinary.com/dsjv33crm/image/upload/v1623348167/indicaria/logo_indicaria_branco_h5czg5.png" %>
  <% end %>

<%= simple_form_for :search, url: root_path, method: "GET", html: { class: 'form-inline' } do |f| %>
  <%= f.input "Search", label: false, placeholder: "Buscar" %>
  <%= f.submit ("<i class='fa fa-search'</i> Search"), :class => "btn btn-success" %>
<% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active align-self-center">
        <%= link_to "Preferências", "#", class: "navbar-link" %>
      </li>
      <li class="nav-item active align-self-center">
        <%= link_to "Indicações", "#", class: "navbar-link" %>
      </li>
      <li class="nav-item active align-self-center">
        <%= link_to "Meu perfil", "#", class: "navbar-link" %>
      </li>
      <li class="nav-item dropdown">
        <%= image_tag "https://kitt.lewagon.com/placeholder/users/juliafso", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "Meu perfil", "#", class: "dropdown-item" %>
          <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
        </div>
      </li>
    </ul>
  </div>
</div>
