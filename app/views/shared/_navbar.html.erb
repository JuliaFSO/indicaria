<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "https://res.cloudinary.com/dsjv33crm/image/upload/v1623348167/indicaria/logo_indicaria_branco_h5czg5.png" %>
  <% end %>

  <div class="align-self-center pt-3 w-50">
    <%= simple_form_for :search, url: root_path, method: :get do |f| %>
      <div class="search-form-control form-group flex-grow-1">
        <input class="form-control string required" type="text" name="search[query]" id="search_query"  placeholder="Buscar um filme" />
        <button name="button" type="submit" class="btn btn-flat">
        <i class="fas fa-search"></i>
        </button>
      </div>
    <% end %>
</div>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active align-self-center">
        <%= link_to "Login", new_user_session_path, class: "navbar-link" %>
      </li>
    </ul>
  </div>
</div>
